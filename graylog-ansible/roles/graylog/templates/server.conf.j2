# This file is managed by Ansible.
# Do not edit this file manually.

# --- Core Settings ---
password_secret = {{ graylog_password_secret }}
root_password_sha2 = {{ graylog_admin_password | password_hash('sha256') }}
root_timezone = Europe/Berlin
data_dir = /var/lib/graylog-server

# --- HTTP Settings ---
http_bind_address = {{ graylog_http_bind_address }}

# --- Journal Settings ---
message_journal_max_age = {{ graylog_journal_max_age }}
message_journal_max_size = {{ graylog_journal_max_size }}

# --- MongoDB and OpenSearch Settings ---
mongodb_uri = mongodb://{{ graylog_mongodb_host }}:27017/graylog
# The elasticsearch_hosts variable is used by Graylog to connect to the Data Node.
elasticsearch_hosts = http://127.0.0.1:9200
